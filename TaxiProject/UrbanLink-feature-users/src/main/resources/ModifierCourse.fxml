<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.DatePicker?>

<AnchorPane prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.jdbc.controllers.ModifierCourseController">
    <children>
        <Label layoutX="50.0" layoutY="110.0" text="Date de course:"/>
        <DatePicker fx:id="datePickerCourse" layoutX="200.0" layoutY="105.0" prefWidth="200.0"/>

        <!-- Heure de course -->
        <Label layoutX="50.0" layoutY="150.0" text="Heure de course:"/>
        <TextField fx:id="txtTime" layoutX="200.0" layoutY="145.0" prefWidth="200.0"/>

        <!-- Ville de départ -->
        <Label layoutX="50.0" layoutY="190.0" text="Ville de départ:"/>
        <TextField fx:id="txtVilleDepart" layoutX="200.0" layoutY="185.0" prefWidth="200.0"/>

        <!-- Ville d'arrivée -->
        <Label layoutX="50.0" layoutY="230.0" text="Ville d'arrivée:"/>
        <TextField fx:id="txtVilleArrivee" layoutX="200.0" layoutY="225.0" prefWidth="200.0"/>

        <!-- Distance (km) -->
        <Label layoutX="50.0" layoutY="270.0" text="Distance (km):"/>
        <TextField fx:id="txtDistance" layoutX="200.0" layoutY="265.0" prefWidth="200.0"/>

        <!-- Montant -->
        <Label layoutX="50.0" layoutY="310.0" text="Montant (TND):"/>
        <TextField fx:id="txtMontant" layoutX="200.0" layoutY="305.0" prefWidth="200.0"/>

        <!-- Statut -->
        <Label layoutX="50.0" layoutY="350.0" text="Statut:"/>
        <ComboBox fx:id="comboStatut" layoutX="200.0" layoutY="345.0" prefWidth="200.0" promptText="Sélectionnez le statut"/>

        <!-- Bouton Modifier -->
        <Button fx:id="btnModifier" layoutX="200.0" layoutY="390.0" text="Modifier Course"
                onAction="#modifierCourse"
                style="-fx-font-weight: bold; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                prefWidth="200.0" prefHeight="30.0"/>
    </children>
</AnchorPane>
