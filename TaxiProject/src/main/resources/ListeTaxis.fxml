<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.ListeTaxisController">

    <!-- TableView pour afficher la liste des taxis -->
    <TableView fx:id="tableView" layoutX="10.0" layoutY="10.0" prefHeight="550.0" prefWidth="780.0">
        <columns>
            <TableColumn fx:id="colImmatriculation" prefWidth="150.0" text="Immatriculation"/>
            <TableColumn fx:id="colMarque" prefWidth="100.0" text="Marque"/>
            <TableColumn fx:id="colModele" prefWidth="100.0" text="Modèle"/>
            <TableColumn fx:id="colAnnee" prefWidth="80.0" text="Année"/>
            <TableColumn fx:id="colCapacite" prefWidth="80.0" text="Capacité"/>
            <TableColumn fx:id="colStatut" prefWidth="120.0" text="Statut"/>
        </columns>
    </TableView>

    <!-- Bouton Modifier -->
    <Button layoutX="10.0" layoutY="570.0" text="Modifier"
            onAction="#ModifierTaxi"
            style="-fx-font-size: 14; -fx-pref-width: 100;"/>

    <!-- Bouton Supprimer -->
    <Button layoutX="120.0" layoutY="570.0" text="Supprimer"
            onAction="#supprimerTaxi"
            style="-fx-font-size: 14; -fx-pref-width: 100; -fx-background-color: #FF4444; -fx-text-fill: white;"/>

    <!-- Bouton Retour -->
    <Button layoutX="350.0" layoutY="570.0" text="Retour"
            onAction="#retourAccueil"
            style="-fx-font-size: 14; -fx-pref-width: 100;"/>
</AnchorPane>