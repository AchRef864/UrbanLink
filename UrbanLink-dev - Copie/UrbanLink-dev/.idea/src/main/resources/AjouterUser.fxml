<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="623.0" prefWidth="809.0" style="-fx-background-color: #003D29;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.AjouterUserController">
    <VBox alignment="CENTER" layoutX="31.0" layoutY="48.0" prefHeight="540.0" prefWidth="739.0" spacing="15">

        <!-- Title -->
        <Label style="-fx-font-size: 25px; -fx-font-weight: bold;" text="Ajouter un utilisateur" textFill="#3498DB" />

        <!-- Input Fields -->
        <TextField fx:id="nomTextField" promptText="Nom" style="-fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #1E2F23; -fx-text-fill: white; -fx-prompt-text-fill: #bbb;" />
        <TextField fx:id="emailTextField" promptText="Email" style="-fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #1E2F23; -fx-text-fill: white; -fx-prompt-text-fill: #bbb;" />
        <TextField fx:id="phoneTextField" promptText="Téléphone" style="-fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #1E2F23; -fx-text-fill: white; -fx-prompt-text-fill: #bbb;" />
        <TextField fx:id="passwordTextField" promptText="Mot de passe" style="-fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #1E2F23; -fx-text-fill: white; -fx-prompt-text-fill: #bbb;" />

        <!-- Role Selection -->
        <ComboBox fx:id="adminComboBox" promptText="Sélectionner un rôle" style="-fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #1E2F23; -fx-text-fill: white;" />

        <!-- Buttons -->
        <Button onAction="#ajouteUserAction" style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 15; -fx-padding: 10 25; -fx-font-weight: bold; -fx-cursor: hand;" text="Valider" />
        <Button fx:id="exit" onAction="#ExitButton" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8 20; -fx-cursor: hand;" text="Exit" />

    </VBox>
</AnchorPane>