<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controller.AvisTableController">
    <children>
        <VBox spacing="10" layoutX="20.0" layoutY="20.0">
            <Button text="Create a new review" onAction="#createAvisAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <TableView fx:id="avisTableView" prefHeight="500.0" prefWidth="700.0">
                <columns>
                    <TableColumn fx:id="avisIdColumn" text="Review ID"/>
                    <TableColumn fx:id="noteColumn" text="Note"/>
                    <TableColumn fx:id="commentaireColumn" text="Commentaire"/>
                    <TableColumn fx:id="dateAvisColumn" text="Date review"/>
                    <TableColumn fx:id="userIdColumn" text="User ID"/>
                    <TableColumn fx:id="editColumn" text="Edit" style="-fx-background-color: #F1C40F; -fx-text-fill: black; -fx-font-size: 16px; -fx-background-radius: 15; -fx-font-weight: bold; -fx-cursor: hand;"/>
                    <TableColumn fx:id="deleteColumn" text="Delete" style="-fx-background-color: #d20a2e; -fx-text-fill: black; -fx-font-size: 16px; -fx-background-radius: 15; -fx-font-weight: bold; -fx-cursor: hand;"/>
                    <TableColumn fx:id="viewReponsesColumn" text="View Responses" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 15;-fx-font-weight: bold; -fx-cursor: hand;"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>