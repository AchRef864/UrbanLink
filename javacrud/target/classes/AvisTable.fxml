<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controller.AvisTableController">
    <children>
        <VBox spacing="10" layoutX="20.0" layoutY="20.0">
            <Button text="Create New Avis" onAction="#createAvisAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <TableView fx:id="avisTableView" prefHeight="400.0" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="avisIdColumn" text="Avis ID"/>
                    <TableColumn fx:id="noteColumn" text="Note"/>
                    <TableColumn fx:id="commentaireColumn" text="Commentaire"/>
                    <TableColumn fx:id="dateAvisColumn" text="Date Avis"/>
                    <TableColumn fx:id="userIdColumn" text="User ID"/>
                </columns>
            </TableView>
            <HBox spacing="10">
                <Button text="Add" onAction="#addAvisAction" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Update" onAction="#updateAvisAction" style="-fx-background-color: #FFC107; -fx-text-fill: white;"/>
                <Button text="Delete" onAction="#deleteAvisAction" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
                <ComboBox fx:id="deleteAvisComboBox" prefWidth="150.0"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>