<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.CentralMenuController">
    <!-- Background Image with Low Transparency -->
    <ImageView fitHeight="825.0" fitWidth="1078.0" opacity="0.3">
        <Image url="@/images/background_image.jpg" />
    </ImageView>

    <!-- Main Content -->
    <HBox spacing="0" style="-fx-background-color: #1A1A2E;">
        <!-- Sidebar -->
        <VBox alignment="CENTER" minWidth="199.0" prefHeight="825.0" prefWidth="199.0" spacing="20" style="-fx-background-color: #0A192F; -fx-padding: 20; -fx-min-width: 200;">
            <!-- UrbanLink Title -->
            <Text fx:id="urbanLinkTitle" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #00FFC6;" text="UrbanLink" />
        </VBox>

        <!-- Central Menu -->
        <VBox alignment="CENTER" prefHeight="799.0" prefWidth="936.0" spacing="30" style="-fx-background-color: #1E1E2E; -fx-padding: 50; -fx-max-width: infinity;">
         <Text opacity="0.13" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #00FFC6;" text="UrbanLink" wrappingWidth="135.25">
            <font>
               <Font size="51.0" />
            </font>
         </Text>
            <!-- Subtitle -->
            <Text style="-fx-font-size: 18px; -fx-fill: #E0E0E0;" text="Your Gateway to Smart Transportation" wrappingWidth="313.294921875" />

            <!-- Buttons Container -->
            <HBox alignment="CENTER" prefHeight="103.0" prefWidth="853.0" spacing="20">
                <!-- Taxi Button -->
                <StackPane prefHeight="122.0" prefWidth="133.0">
                    <Rectangle arcHeight="10" arcWidth="10" fill="transparent" height="120" stroke="#00FFC6" strokeWidth="2" width="120" />
                    <Button fx:id="taxiButton" onAction="#handleTaxiButton" prefHeight="96.0" prefWidth="106.0" styleClass="button">
                        <graphic>
                            <VBox alignment="CENTER" spacing="10">
                                <ImageView fitHeight="40" fitWidth="40">
                                    <Image url="@/images/taxi_icon.png" />
                                </ImageView>
                                <Text style="-fx-fill: white; -fx-font-size: 14px;" text="Taxi" />
                            </VBox>
                        </graphic>
                    </Button>
                </StackPane>

                <!-- Reservation Button -->
                <StackPane>
                    <Rectangle arcHeight="10" arcWidth="10" fill="transparent" height="120" stroke="#00FFC6" strokeWidth="2" width="120" />
                    <Button fx:id="reservationButton" onAction="#handleReservationButton" styleClass="button">
                        <graphic>
                            <VBox alignment="CENTER" spacing="10">
                                <ImageView fitHeight="40" fitWidth="40">
                                    <Image url="@/images/reservation_icon.png" />
                                </ImageView>
                                <Text style="-fx-fill: white; -fx-font-size: 14px;" text="Reservation" />
                            </VBox>
                        </graphic>
                    </Button>
                </StackPane>

                <!-- Abonnement Button -->
                <StackPane>
                    <Rectangle arcHeight="10" arcWidth="10" fill="transparent" height="120" stroke="#00FFC6" strokeWidth="2" width="120" />
                    <Button fx:id="abonnementButton" onAction="#handleAbonnementButton" styleClass="button">
                        <graphic>
                            <VBox alignment="CENTER" spacing="10">
                                <ImageView fitHeight="40" fitWidth="40">
                                    <Image url="@/images/abonnement_icon.png" />
                                </ImageView>
                                <Text style="-fx-fill: white; -fx-font-size: 14px;" text="Abonnement" />
                            </VBox>
                        </graphic>
                    </Button>
                </StackPane>

                <!-- Avis Button -->
                <StackPane>
                    <Rectangle arcHeight="10" arcWidth="10" fill="transparent" height="120" stroke="#00FFC6" strokeWidth="2" width="120" />
                    <Button fx:id="avisButton" onAction="#handleAvisButton" styleClass="button">
                        <graphic>
                            <VBox alignment="CENTER" spacing="10">
                                <ImageView fitHeight="40" fitWidth="40">
                                    <Image url="@/images/avis_icon.png" />
                                </ImageView>
                                <Text style="-fx-fill: white; -fx-font-size: 14px;" text="Avis" />
                            </VBox>
                        </graphic>
                    </Button>
                </StackPane>



                <!-- Chat Button -->
                <StackPane>
                    <Rectangle arcHeight="10" arcWidth="10" fill="transparent" height="120" stroke="#00FFC6" strokeWidth="2" width="120" />
                    <Button fx:id="chatButton" onAction="#handleChatButton" styleClass="button">
                        <graphic>
                            <VBox alignment="CENTER" spacing="10">
                                <ImageView fitHeight="40" fitWidth="40">
                                    <Image url="@/images/chat_icon.png" />
                                </ImageView>
                                <Text style="-fx-fill: white; -fx-font-size: 14px;" text="Chat" />
                            </VBox>
                        </graphic>
                    </Button>
                </StackPane>

                <!-- Vehicule Button -->
                <StackPane>
                    <Rectangle arcHeight="10" arcWidth="10" fill="transparent" height="120" stroke="#00FFC6" strokeWidth="2" width="120" />
                    <Button fx:id="vehiculeButton" onAction="#handleVehiculeButton" styleClass="button">
                        <graphic>
                            <VBox alignment="CENTER" spacing="10">
                                <ImageView fitHeight="40" fitWidth="40">
                                    <Image url="@/images/vehicule_icon.png" />
                                </ImageView>
                                <Text style="-fx-fill: white; -fx-font-size: 14px;" text="Vehicule" />
                            </VBox>
                        </graphic>
                    </Button>
                </StackPane>
            </HBox>
        </VBox>
    </HBox>
</StackPane>
