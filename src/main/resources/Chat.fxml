<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" stylesheets="styles.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.ChatController" spacing="10" style="-fx-padding: 10;">
    <TextArea fx:id="chatHistory" editable="false" prefHeight="400" prefWidth="600" />
    <TextField fx:id="questionField" promptText="Type your question here..." />
    <Button text="Ask" onAction="#handleAskQuestion" />
</VBox>