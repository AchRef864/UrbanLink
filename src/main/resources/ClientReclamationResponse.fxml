<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>

<AnchorPane prefHeight="508.0" prefWidth="692.0" style="-fx-background-color: #003D29;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.ClientReclamationResponseController">
    <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" prefHeight="401.0" prefWidth="581.0" spacing="15.0">
        <!-- Title -->
        <Label style="-fx-font-size: 24px; -fx-font-family: Arial;" text="Your Last Reclamation" textFill="WHITE" />

        <!-- Sujet Field -->
        <Label text="Sujet:" textFill="WHITE" />
        <TextField fx:id="sujetTextField" editable="false" style="-fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #1E2F23; -fx-text-fill: white; -fx-prompt-text-fill: #bbb;" />

        <!-- Date Field -->
        <Label text="Date:" textFill="WHITE" />
        <TextField fx:id="dateTextField" editable="false" style="-fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #1E2F23; -fx-text-fill: white; -fx-prompt-text-fill: #bbb;" />

        <!-- Response Field -->
        <Label text="Response:" textFill="WHITE" />
        <TextArea fx:id="responseTextArea" editable="false" style="-fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #1E2F23; -fx-text-fill: white; -fx-prompt-text-fill: #bbb;" />

        <!-- Back Button -->
        <Button onAction="#handleBackButton" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8 20; -fx-cursor: hand;" text="Back" />
    </VBox>
</AnchorPane>