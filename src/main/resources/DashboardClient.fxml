<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.DashboardClientController">
    <!-- Top Section: Header -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #1A1A2E; -fx-padding: 15; -fx-alignment: center-left;">
            <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="Dashboard Client" />
        </HBox>
    </top>

    <!-- Left Section: Navigation Menu -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #1A1A2E; -fx-padding: 20; -fx-border-color: #00BFA5; -fx-border-width: 0 1 0 0;">
            <!-- Navigation Buttons with Icons -->
            <Button fx:id="btnHome" styleClass="nav-button" text="Home">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <Image url="@/images/home_icon.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnVehicle" styleClass="nav-button" text="Vehicle">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <Image url="@/images/vehicule_icon.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnMaintenance" styleClass="nav-button" text="Maintenance">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <Image url="@/images/maintenance_icon.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnInsertUser" styleClass="nav-button" text="Insert User">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <Image url="@/images/insert_user.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnEditUser" styleClass="nav-button" text="Edit User">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <Image url="@/images/edit_user_icon.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnRateRide" styleClass="nav-button" text="Rate Ride">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <Image url="@/images/rate_ride.png" />
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnLogout" style="-fx-background-color: #FF1744;" styleClass="nav-button" text="Logout">
                <graphic>
                    <ImageView fitHeight="20" fitWidth="20">
                        <Image url="@/images/logout_icon.png" />
                    </ImageView>
                </graphic>
            </Button>
        </VBox>
    </left>

    <!-- Center Section: Content Area -->
    <center>
        <StackPane fx:id="contentArea" prefHeight="823.0" prefWidth="929.0" style="-fx-background-color: #ffffff; -fx-padding: 20;" />
    </center>
</BorderPane>