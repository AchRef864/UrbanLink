<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.HomeController">

    <!-- Background Image with Low Transparency -->
    <ImageView fitHeight="600.0" fitWidth="800.0" opacity="0.3" preserveRatio="true">
        <image>
            <Image url="@/images/logo.png" />
        </image>
    </ImageView>


    <!-- Content -->
    <VBox alignment="CENTER" layoutX="211.0" layoutY="128.0" prefHeight="285.0" prefWidth="379.0" spacing="20">
        <!-- Greeting -->
        <Label style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Hello">
            <font>
                <Font name="Arial" size="36.0" />
            </font>
        </Label>

        <!-- Additional Content (Optional) -->
        <Label style="-fx-font-size: 20px; -fx-text-fill: #34495E;" text="Welcome to the Dashboard!" />
    </VBox>

</AnchorPane>
