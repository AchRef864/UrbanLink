<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<AnchorPane prefHeight="802.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.TrajetListController">

    <VBox alignment="CENTER" layoutX="20.0" layoutY="20.0" prefHeight="731.0" prefWidth="1246.0" spacing="10.0">

        <!-- Title -->
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Liste des Trajets" />

        <!-- TableView to display trajets -->
        <TableView fx:id="trajetTableView" prefHeight="628.0" prefWidth="1246.0">
            <columns>

                <!-- Departure Column -->
                <TableColumn fx:id="departureColumn" prefWidth="118.933349609375" text="Départ" />

                <!-- Destination Column -->
                <TableColumn fx:id="destinationColumn" prefWidth="139.4666290283203" text="Destination" />

                <!-- Distance Column -->
                <TableColumn fx:id="distanceColumn" prefWidth="117.60000610351562" text="Distance (km)" />

                <!-- Duration Column -->
                <TableColumn fx:id="durationColumn" prefWidth="120.80001831054688" text="Durée" />

                <!-- Departure Time Column -->
                <TableColumn fx:id="departureTimeColumn" prefWidth="162.4000244140625" text="Heure de départ" />

                <!-- Arrival Time Column -->
                <TableColumn fx:id="arrivalTimeColumn" prefWidth="199.20001220703125" text="Heure d'arrivée" />

                <!-- Price Column -->
                <TableColumn fx:id="priceColumn" prefWidth="142.4000244140625" text="Prix (TND)" />

                <!-- Action Column -->
                <TableColumn fx:id="actionColumn" prefWidth="247.20001220703125" text="Actions" />
            </columns>
        </TableView>
    </VBox>

    <!-- ComboBox for selecting transport type -->
    <VBox layoutX="20.0" layoutY="660.0" spacing="10.0">
        <Label text="Type de Transport:" />
        <ComboBox fx:id="typeTransportComboBox" prefWidth="200.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Transport Public" />
                    <String fx:value="Covoiturage" />
                </FXCollections>
            </items>
        </ComboBox>
    </VBox>

    <!-- Button to add a new trajet -->
    <Button fx:id="addTrajetButton" layoutX="20.0" layoutY="751.0" prefHeight="8.0" prefWidth="137.0" style="-fx-font-size: 16px; -fx-padding: 10px 20px;" text="Ajouter Trajet" />
</AnchorPane>
