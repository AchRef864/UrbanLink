<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #003D29;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.ReclamationController">
    <VBox alignment="CENTER" layoutX="50.0" layoutY="30.0" spacing="15.0">
        <!-- Title -->
        <Label text="Create Reclamation" textFill="WHITE" style="-fx-font-size: 24px; -fx-font-family: Arial;" />

        <!-- Sujet Field -->
        <Label text="Sujet:" textFill="WHITE" />
        <TextField fx:id="sujetTextField" promptText="Enter sujet" style="-fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #1E2F23; -fx-text-fill: white; -fx-prompt-text-fill: #bbb;" />

        <!-- Description Field -->
        <Label text="Description:" textFill="WHITE" />
        <TextArea fx:id="descriptionTextArea" promptText="Enter description" style="-fx-background-radius: 10; -fx-padding: 8; -fx-background-color: #1E2F23; -fx-text-fill: white; -fx-prompt-text-fill: #bbb;" />

        <!-- Submit Button -->
        <Button onAction="#handleSubmitButton" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8 20; -fx-cursor: hand;" text="Submit" />

        <!-- Back Button -->
        <Button onAction="#handleBackButton" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 10; -fx-padding: 8 20; -fx-cursor: hand;" text="Back" />
    </VBox>
</AnchorPane>