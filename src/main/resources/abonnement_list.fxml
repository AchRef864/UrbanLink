<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.abonnement.AbonnementListeController" stylesheets="@styles.css" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Titre -->
    <Label text="Liste des Abonnements" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <HBox spacing="10">
        <Label text="Rechercher :"/>
        <TextField fx:id="tfSearch" promptText="Rechercher un abonnement..." onKeyReleased="#rechercherAbonnement"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Trier par :"/>
        <ComboBox fx:id="cbTri" prefWidth="200" promptText="Sélectionner un critère de tri">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Prix croissant" />
                    <String fx:value="Date de fin" />
                    <String fx:value="Date de début" />
                    <String fx:value="Type" />
                    <String fx:value="Etat" />
                </FXCollections>
            </items>
        </ComboBox>
    </HBox>

    <!-- Tableau des abonnements -->
    <TableView fx:id="tableAbonnements" prefHeight="300" prefWidth="600">
        <columns>
            <TableColumn fx:id="colId" text="ID" />
            <TableColumn fx:id="colType" text="Type" />
            <TableColumn fx:id="colPrix" text="Prix" />
            <TableColumn fx:id="colDateDebut" text="Date Début" />
            <TableColumn fx:id="colDateFin" text="Date Fin" />
            <TableColumn fx:id="colEtat" text="État" />
            <TableColumn fx:id="colAction" text="Actions" />
        </columns>
    </TableView>

    <!-- Bouton Générer PDF -->
    <Button fx:id="btnGeneratePdf" text="Générer PDF" onAction="#generatePdf" />

    <!-- Retour à l'accueil -->
    <Button text="Retour" onAction="#retourAccueil" />
</VBox>