<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerAjoutAbonnement" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Ajouter un Abonnement" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Formulaire pour ajouter un abonnement -->
    <HBox spacing="10">
        <Label text="Type:" />
        <TextField fx:id="typeField" promptText="Type d'abonnement" />
    </HBox>
    <HBox spacing="10">
        <Label text="Prix:" />
        <TextField fx:id="prixField" promptText="Prix" />
    </HBox>
    <HBox spacing="10">
        <Label text="Date Début:" />
        <DatePicker fx:id="dateDebutPicker" />
    </HBox>
    <HBox spacing="10">
        <Label text="Date Fin:" />
        <DatePicker fx:id="dateFinPicker" />
    </HBox>
    <HBox spacing="10">
        <Label text="État:" />
        <TextField fx:id="etatField" promptText="État" />
    </HBox>

    <!-- Bouton pour ajouter un abonnement -->
    <Button text="Ajouter" onAction="#handleAddAbonnement" />
</VBox>