<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane prefHeight="489.0" prefWidth="674.0" style="-fx-background-color: linear-gradient(to bottom right, #ffffff, #fafcfc);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.abonnement.AbonnementListeController" stylesheets="@styles.css" >
    <children>
        <!-- Main Form Content -->
        <VBox alignment="CENTER" spacing="25" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <padding>
                <Insets bottom="30" left="30" right="30" top="30" />
            </padding>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0277bd; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="Ajouter un Abonnement" />

            <!-- Formulaire pour ajouter un abonnement -->
            <HBox alignment="CENTER" spacing="15">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #01579b;" text="Type:" />
                <ComboBox fx:id="typeCombo" prefWidth="200" promptText="Sélectionner un type">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Annuel" />
                            <String fx:value="Mensuel" />
                            <String fx:value="Semestriel" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>
            <HBox alignment="CENTER" spacing="15">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #01579b;" text="Prix:" />
                <TextField fx:id="prixField" editable="false" style="-fx-background-color: #e0e0e0; -fx-border-color: #4fc3f7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" prefWidth="200" />
            </HBox>
            <HBox alignment="CENTER" spacing="15">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #01579b;" text="Date Début:" />
                <DatePicker fx:id="dateDebutPicker" style="-fx-background-color: white; -fx-border-color: #4fc3f7; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </HBox>
            <HBox alignment="CENTER" spacing="15">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #01579b;" text="Date Fin:" />
                <DatePicker fx:id="dateFinPicker" style="-fx-background-color: white; -fx-border-color: #4fc3f7; -fx-border-radius: 5; -fx-background-radius: 5;" />
            </HBox>
            <HBox alignment="CENTER" spacing="15">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #01579b;" text="État:" />
                <ComboBox fx:id="etatCombo" prefWidth="200" editable="false" value="Suspendu">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Actif" />
                            <String fx:value="Expiré" />
                            <String fx:value="Suspendu" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <!-- Bouton pour ajouter un abonnement -->
            <Button onAction="#handleAddAbonnement" text="Ajouter" style="-fx-background-color: #0288d1; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" />

        </VBox>

        <!-- Notification Panel in Bottom-Right Corner -->
        <Pane fx:id="notificationPane" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #f44336; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 2, 2);" AnchorPane.bottomAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Text fx:id="notificationText" fill="WHITE" wrappingWidth="180" textAlignment="CENTER" text="" style="-fx-font-size: 12px;" />
        </Pane>
    </children>
</AnchorPane>