<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerReservationAjout" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Ajouter une Réservation" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Formulaire pour ajouter une réservation -->
    <HBox spacing="10">
        <Label text="ID Utilisateur:" />
        <TextField fx:id="userIdField" promptText="ID Utilisateur" />
    </HBox>
    <HBox spacing="10">
        <Label text="Date Début:" />
        <DatePicker fx:id="dateDebutPicker" />
    </HBox>
    <HBox spacing="10">
        <Label text="Date Fin:" />
        <DatePicker fx:id="dateFinPicker" />
    </HBox>
    <HBox spacing="10">
        <Label text="Statut:" />
        <TextField fx:id="statutField" promptText="Statut" />
    </HBox>
    <HBox spacing="10">
        <Label text="ID Abonnement:" />
        <TextField fx:id="abonnementIdField" promptText="ID Abonnement" />
    </HBox>

    <!-- Bouton pour ajouter une réservation -->
    <Button text="Ajouter" onAction="#handleAddReservation" />
</VBox>