<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.jdbc.controllers.abonnement.ReservationListController" spacing="10" alignment="CENTER" stylesheets="@styles.css">
    <HBox spacing="10" alignment="CENTER">
        <Label text="Filtrer par Statut:" />
        <ComboBox fx:id="statutFilterCombo" promptText="Tous les statuts" />
        <Label text="Rechercher par Utilisateur:" />
        <TextField fx:id="userIdFilterField" promptText="ID Utilisateur" />
        <Button text="Filtrer" onAction="#filterReservations" style="-fx-background-color: #00BFA5; -fx-text-fill: white;" />
    </HBox>
    <TableView fx:id="tableReservations" prefHeight="400" prefWidth="800">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50" />
            <TableColumn fx:id="colUserId" text="User ID" prefWidth="100" />
            <TableColumn fx:id="colStatut" text="Statut" prefWidth="100" />
            <TableColumn fx:id="colDateDebut" text="Date Début" prefWidth="150" />
            <TableColumn fx:id="colDateFin" text="Date Fin" prefWidth="150" />
            <TableColumn fx:id="colAbonnement" text="Abonnement" prefWidth="150" />
            <TableColumn fx:id="colAction" text="Actions" prefWidth="200" />
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Ajouter Réservation" onAction="#handleAddReservation" style="-fx-background-color: #00BFA5; -fx-text-fill: white;" />
        <Button text="Rafraîchir" onAction="#refreshReservations" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
    </HBox>
</VBox>